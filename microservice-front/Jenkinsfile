pipeline {
    agent any

    environment {
        IMAGE_NAME = "demishuaccha/frontend-service"
        IMAGE_TAG  = "latest"
        DOCKER_CREDENTIAL_ID = 'dockerhub-creds'
        FRONT_DIR = "microservice-front" 
        
        // Definimos las IPs aquí para que sea fácil cambiarlas si tu Minikube cambia
        MINIKUBE_IP = "192.168.59.104"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIAL_ID, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        bat "docker login -u %USER% -p %PASS%"
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${env.FRONT_DIR}") {
                    script {
                        // Inyectamos las variables que Vite necesita durante el build
                        withEnv([
                            "VITE_KEYCLOAK_URL=http://${env.MINIKUBE_IP}:31000",
                            "VITE_GATEWAY_URL=http://${env.MINIKUBE_IP}:30080"
                        ]) {
                            echo "--- Instalando dependencias y compilando con variables de entorno ---"
                            bat "npm install"
                            bat "npm run build"
                        }
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    // Al construir la imagen DESPUÉS del build, el 'dist' ya lleva las IPs grabadas
                    bat "docker build -t ${env.IMAGE_NAME}:${env.IMAGE_TAG} ./${env.FRONT_DIR}"
                    bat "docker push ${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    dir("${env.FRONT_DIR}") {
                        echo "--- Aplicando configuración de k8s ---"
                        bat "kubectl apply -f k8s/ --validate=false"
                        
                        echo "--- Forzando reinicio para actualizar imagen latest ---"
                        bat "kubectl rollout restart deployment frontend-service"
                    }
                    
                    echo "--- Esperando salud de los pods ---"
                    bat "kubectl wait --for=condition=ready pod -l app=keycloak --timeout=180s"
                    bat "kubectl wait --for=condition=ready pod -l app=frontend-service --timeout=120s"
                }
            }
        }
    }

    post {
        success {
            echo "¡Despliegue exitoso! Accede en http://${env.MINIKUBE_IP}:30000"
            script { bat "docker logout" }
        }
        failure {
            echo "Fallo en el pipeline. Revisa los logs de construcción de npm o la conexión con el clúster."
        }
    }
}