pipeline {
    agent any

    environment {
        IMAGE_NAME = "demishuaccha/frontend-service"
        IMAGE_TAG  = "latest"
        DOCKER_CREDENTIAL_ID = 'dockerhub-creds'
        FRONT_DIR = "microservice-front" 
        MINIKUBE_IP = "192.168.59.104"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIAL_ID, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        bat "docker login -u %USER% -p %PASS%"
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${env.FRONT_DIR}") {
                    script {
                        // Aquí inyectamos EXACTAMENTE las variables de tu .env
                        withEnv([
                            "VITE_API_BASE_URL=http://${env.MINIKUBE_IP}:30080",
                            "VITE_TINGESO_M_BACKEND_PORT=30080",
                            "VITE_TINGESO_M_BACKEND_SERVER=${env.MINIKUBE_IP}",
                            "VITE_KEYCLOAK_URL=http://${env.MINIKUBE_IP}:31000",
                            "VITE_KEYCLOAK_REALM=tool_rent_M",
                            "VITE_KEYCLOAK_CLIENT=mi-frontend"
                        ]) {
                            echo "--- Instalando dependencias ---"
                            bat "npm install"
                            echo "--- Compilando (Las variables se graban en los archivos estáticos) ---"
                            bat "npm run build"
                        }
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    // Se construye la imagen con el contenido de 'dist' ya generado
                    bat "docker build -t ${env.IMAGE_NAME}:${env.IMAGE_TAG} ./${env.FRONT_DIR}"
                    bat "docker push ${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    dir("${env.FRONT_DIR}") {
                        echo "--- Bajando pods y servicios antiguos para refrescar ---"
                        // Eliminamos lo existente para asegurar una subida limpia
                        bat "kubectl delete -f k8s/ --ignore-not-found=true"
                        
                        echo "--- Levantando servicios actualizados ---"
                        bat "kubectl apply -f k8s/ --validate=false"
                        
                        // Opcional: Forzar el despliegue por si el nombre de la imagen no cambió
                        bat "kubectl rollout restart deployment frontend-service"
                    }
                    
                    echo "--- Esperando salud de los pods ---"
                    bat "kubectl wait --for=condition=ready pod -l app=frontend-service --timeout=120s"
                }
            }
        }
    }

    post {
        success {
            echo "¡Despliegue exitoso! Accede en http://${env.MINIKUBE_IP}:30000"
            script { bat "docker logout" }
        }
        failure {
            echo "Fallo en el pipeline. Revisa los logs de npm o kubectl."
        }
    }
}