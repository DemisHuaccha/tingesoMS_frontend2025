pipeline {
    agent any

    environment {
        IMAGE_NAME = "demishuaccha/frontend-service"
        IMAGE_TAG  = "latest"
        DOCKER_CREDENTIAL_ID = 'dockerhub-creds'
        FRONT_DIR = "microservice-front" 
        MINIKUBE_IP = "192.168.59.104"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Login to Docker Hub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_CREDENTIAL_ID, usernameVariable: 'USER', passwordVariable: 'PASS')]) {
                        bat "docker login -u %USER% -p %PASS%"
                    }
                }
            }
        }

        stage('Build Frontend') {
            steps {
                dir("${env.FRONT_DIR}") {
                    script {
                        withEnv([
                            "VITE_API_BASE_URL=http://${env.MINIKUBE_IP}:30080",
                            "VITE_TINGESO_M_BACKEND_PORT=30080",
                            "VITE_TINGESO_M_BACKEND_SERVER=${env.MINIKUBE_IP}",
                            "VITE_KEYCLOAK_URL=http://${env.MINIKUBE_IP}:31000",
                            "VITE_KEYCLOAK_REALM=tingeso-realm",
                            "VITE_KEYCLOAK_CLIENT=tingeso-front"
                        ]) {
                            bat "echo La URL de Keycloak es: %VITE_KEYCLOAK_URL%"
                            echo "--- Instalando dependencias ---"
                            bat "npm install"
                            echo "--- Compilando frontend ---"
                            bat "npm run build"
                        }
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    // Usamos --no-cache para asegurar que se use el build fresco de arriba
                    bat "docker build --no-cache -t ${env.IMAGE_NAME}:${env.IMAGE_TAG} ./${env.FRONT_DIR}"
                    bat "docker push ${env.IMAGE_NAME}:${env.IMAGE_TAG}"
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    dir("${env.FRONT_DIR}") {
                        echo "--- Actualizando configuración en K8s (Sin borrar recursos) ---"
                        // 'apply' solo actualiza cambios, no borra datos de la DB
                        bat "kubectl apply -f k8s/ --validate=false"
                        
                        echo "--- Reiniciando SOLO el servicio de frontend ---"
                        // Esto fuerza a que el pod del frontend use la nueva imagen sin tocar a Keycloak
                        bat "kubectl rollout restart deployment frontend-service"
                    }
                    
                    echo "--- Esperando que el frontend esté listo ---"
                    bat "kubectl rollout status deployment frontend-service --timeout=120s"
                }
            }
        }
    }

    post {
        success {
            echo "¡Despliegue exitoso! Accede en http://${env.MINIKUBE_IP}:30000"
            script { bat "docker logout" }
        }
        failure {
            echo "Fallo en el pipeline. Revisa los logs."
        }
    }
}